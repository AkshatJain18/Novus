<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.org.novus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="Novus"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Events" />
        <activity android:name=".Meetings" />
        <activity android:name=".AddMeeting" />
        <activity android:name=".AddEvent" />
        <activity android:name=".Ideas" />
        <activity android:name=".Content" />
        <activity android:name=".Announcements" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SubmitIdeasActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".LandingPage" />
        <activity android:name=".DepartmentActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AddAnnouncements" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".AboutNovus" />
        <activity android:name=".MarkAttendance" />
        <activity android:name=".AttendanceSystem" />
        <activity android:name=".DateWiseAttendanceRecords" />
        <activity android:name=".TotalAttendanceOfAllMembers" />
        <activity android:name=".Attendance" />
        <activity android:name=".AllMembersCurrentAttendance" />
        <activity android:name=".NewMemberVerificationCode" />
        <activity android:name=".Credits" />
        <activity android:name=".RemoveMember" />
        <activity android:name=".GiveFeedback" />
        <activity android:name=".AllFeedbacks" />
        <activity android:name=".FeedbackContent"></activity>
    </application>

</manifest>